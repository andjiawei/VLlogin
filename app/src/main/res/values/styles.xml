<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CustomTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@color/login_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/login_text_size</item>
        <item name="android:layout_marginLeft">@dimen/login_button_margin_left</item>
        <item name="android:padding">@dimen/login_button_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
